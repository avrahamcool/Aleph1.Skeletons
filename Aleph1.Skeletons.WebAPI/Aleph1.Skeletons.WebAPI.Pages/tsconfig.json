{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "esnext",
		"typeRoots": [
			"./node_modules/@types"
		],
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"target": "es5",
		"lib": [
			"es2015",
			"dom"
		],
		"moduleResolution": "node",
		"baseUrl": "src",
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "someOutDir"
	},
	"include": [
		"**/*.js",
		"**/*.ts"
	],
	"atom": {
		"rewriteTsconfig": false
	}
}